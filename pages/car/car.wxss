/* pages/car/car.wxss */

form{
  padding: 20rpx 0;
  width:90%;
  border-radius: 15px;
  background-color: #fff;
  position: absolute;
  top:50px;
}
form .section__title{
  display: inline-block;
}
form .section{
  margin:5px auto;
  width:90%;
  height: 40px;
  line-height: 40px;
  display: block;
  border-bottom: 1px solid #ccc;
  position: relative;
}
form .section:nth-child(4){
  border-bottom: 0;
}
form .section input{
  display: inline-block;
  width:240rpx;
  padding:0;
  margin:0;
  position:absolute;
  top:8px;
  right:0; 
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
form .number_box{
  display: inline-block;
  width:260rpx;
}
form .area_picker{
  top:-6rpx;
  display:inline-block;
  margin-left:66px;
  font-size:32rpx;
  /* vertical-align:super; */

}
form .btn-area{
  width: 100%;
  margin-top:200rpx;
  text-align: center;
  position:absolute;
}
.btn-area button{
  display: inline-block;
  background-color: #FF3C3F;
  border-radius: 50px;
  color:#fff;
  font-size: 16px;
  padding: 8rpx 24rpx;
  position: relative;
  
}
.btn-area .subInfo{
 margin:0 auto;
}
.quit{
  padding: 0 100rpx;
  margin-right:80rpx;
}
.imgContainer{
  width:30%;
  height: 100rpx;
  display:inline-block;
  float:right;

}
.upload-img{
  width: 100%;
  height: 100%;
  float:right;
  margin-right:20rpx;
}
