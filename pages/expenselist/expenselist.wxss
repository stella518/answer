/* pages/expenselist/expenselist.wxss */
.container{
  justify-content: flex-start;
}
.expense_item{
  width:100%;
  background-color: #fff;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.expense_base{
  padding:20rpx 20rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  font-size: 28rpx;
}
.expense_info{
  padding:10rpx 20rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}
.expense_name{
  width:120rpx;
  height: 120rpx;
  border:1px dashed #ccc;
  display: flex;
  flex-flow: column;
  text-align: center;
  justify-content:center;
  font-size: 36rpx;
  font-weight: 700;
}
.expense_con{
  display: flex;
  flex-flow: column;
  text-align: right;
  justify-content:flex-end;
}
.expense_con text{
  margin-bottom: 10rpx;
}
.expense_con text:last-child{
  margin-bottom: 0;
}
.expense_location{
  padding:20rpx 20rpx;
  border-top: 1px solid #eee;
}