/* pages/purchase/purchase.wxss */
.product_form{
  background-color: #fff;
  width: 100%;
}
.product_img{
  display:block;
  margin: 0 auto;
  width:80%;
}
.product{
  text-align: left;
  padding:20rpx 60rpx;
}
.product_title{
  font-size: 32rpx;
  font-weight: 700;
}
.product_price{
  float: right;
}
.product_main{
  margin:20px 0;
  border-top: 1px solid #ccc;
  background:#eee;
}
.product_introduce{
  background-color:#fff;
  margin:20rpx 0;
}
.product_red{
  margin:20rpx 0;
  font-size: 28rpx;
  padding:20rpx 60rpx;
}
.product_main .content{
  font-size: 24rpx;
  padding:20rpx 60rpx;
}
.product_main .content_head{
  font-size: 26rpx;
  color:#ccc;
}
.product_main .content_main{
 float: right;
 width:70%;
}
.product_main .introduce_title{
  font-size: 32rpx;
  font-weight: 700;
  padding:10rpx 60rpx;
}
.product_main .introduce_main{
  font-size: 24rpx;
  padding:20rpx 60rpx;
  text-indent:48rpx;
}
.settle{
  background-color:#eee;
}
.total{
  width:85%;
  margin-bottom:240rpx;
  padding: 20px 60rpx;
  background-color: #fff;
  border-top: 1px solid #ccc;
}
.total .value{
  width:50%;
  font-size: 30rpx;
}
.total .value text{
  display: block;
  line-height:50rpx;
  margin-bottom:10rpx;
}
.total .amount{
  width:50%;
  font-size: 36rpx;
  margin-top:10px;
  text-align: right;
}
.pay{
  width:100%;
  height:100rpx;
  line-height:100rpx;
  background-color:#FF3C3F;
  position:absolute;
  bottom:0;
  text-align:center;
  color:#fff;
  font-size:36rpx;
  left:50%;
  transform:translateX(-50%);

} 
.pay_icon{
  display: block;
  font-size:30rpx;
  color:#999;
}
.price_tag{
  display: inline-block;
  font-size: 60rpx;
}