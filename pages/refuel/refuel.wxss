/* pages/refuel/refuel.wxss */
.station{
  padding:20rpx 30rpx;
  width:85%;
  background-color: #fff;
  border-radius: 15px;
}
.station_name{
  font-size: 38rpx;
  color:#333;
}
.station_address{
  font-size: 26rpx;
  color:#999;
  margin-top: 20rpx;
}
.second{
  margin-top: -40rpx;
  font-size: 13px;
} 

form{
  padding: 5px 30rpx;
  width:85%;
  background-color: #fff;
  border-radius: 15px;
  margin:20rpx 0;
} 
form .oil_title{
  margin:20rpx 0;
  font-size: 28rpx;
}
form .oils{
  width: 100%;
}
.oil_choose{
  line-height:70rpx;
  height:70rpx;
  display:inline-block;
  vertical-align:top;
  margin-right:20rpx;

}
form .oilBtn{
  width:260rpx;
  background-color: transparent;
  border:1px solid #ccc;
  border-radius: 50px;
  display:inline-block;
  margin-right:20rpx;
}
form .active{
  border:1px solid #01C66F !important;
  color:#01C66F;
}
.price_logo{
  line-height: 1.4rem;
  display:inline-block;
}
.input_price{
  display:inline-block;
}
form .price_btn{
  width:140rpx;
  background-color: transparent;
  border:1px solid #ccc;
  border-radius: 50px;
  display:inline-block;
  margin-right:20rpx;
}
form .oilBtn:first-child{
  margin-right:20rpx;
}
form .section{
  display: inline-block;
  margin:5px auto;
  width:100%;
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #ccc;
  position: relative;
}
form .section{
  font-size:32rpx;
  position: relative;
}
form .section:nth-child(3){
  border-bottom: 0;
}
form .section view{
  display: inline-block;
}
form .section input{
  display: inline-block;
  width:260rpx;
  padding:0;
  margin:0;
  position:absolute;
  top:8px;
  right:0; 
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  text-align:right;
}
form .btn-area{
  width: 100%;
  margin-top:100rpx;
  text-align: center;
}
.btn-area button{
  display: inline-block;
  background-color: #F49816;
  border-radius: 50px;
  color:#fff;
  font-size: 16px;
  padding: 8rpx 24rpx;
  position: relative;
  
}
.total{
  width:85%;
  margin-bottom:240rpx;
  padding: 20px 30rpx;
  background-color: #fff;
  border-radius: 15px;
}
.total .value{
  width:50%;
  font-size: 30rpx;
}
.total .value text{
  display: block;
  line-height:50rpx;
}
.total .amount{
  width:50%;
  font-size: 36rpx;
  margin-top:10px;
  text-align: right;
}
.pay{
  width:200px;
  height: 50px;
  line-height: 50px;
  background-color: #FF3C3F;
  border-radius: 50px;
  position: absolute;
  bottom:50px;
  text-align: center;
  color:#fff;
  font-size: 18px;
} 
.pay_icon{
  display: block;
  font-size:30rpx;
  color:#999;
}
.price_tag{
  display: inline-block;
  font-size: 60rpx;
}