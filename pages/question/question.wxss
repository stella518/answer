/* pages/question/question.wxss */
.timer_container{
  width:100%;
  height: 80px;
  background-color: transparent;
  position: relative;
}
.timer_container .timer{
  width: 100px;
  height: 40px;
  position: relative
}
.time_count{
 position:absolute;
  top:7px;
  left:40rpx;
  color:#fff;
  font-size:32rpx;

}
.counter{
  font-size: 18px;
  display: inline-block;
  position: absolute;
  right: 20px;
  top:10px;
  color:#C3A40F;
}
.question{
  width:90%;
  /* position: absolute;
  top:80px; */
  margin-top:-40rpx;
}
.question .question_title{
  width:100%;
  margin:0 auto;
  text-align: center;
  min-height:300rpx; 
  border-radius: 15px; 
  background-color: #fff; 
  line-height: 50px;
  font-size: 16px;
  color: #333;
  font-weight: 700;
}
.question .question_detail{
  border-top: 1px solid #ccc;
  padding: 20rpx 40rpx;
  min-height: 60rpx;
  line-height: 60rpx;
  font-size: 16px;
  font-weight: 500;
  color: #333;
}
.question_answer{
  width:100%;
  height: 60px;
  line-height: 60px;
  display: block;
  border-radius: 15px;
  background-color: #fff;
  margin-top:8px;
  text-align: center;
  font-size: 16px;
}
.question_cur{
   color:#FF3C3F;
} 

.correct{
  background-color: #01C66F;
  color:#fff;
  font-size: 14px;
  position: relative;
}
 .correct::before{
  content: " ";
  display: block;
  width:30rpx;
  height: 30rpx;
  border:2px solid #fff;
  border-radius: 50%;
  position: absolute;
  top:20px;
  left:10px;
} 
 .correct::after{
  content: " ";
  display: block;
  width:76rpx;
  height: 76rpx;
  border:8rpx solid #fff;
  border-radius: 50%;
  position: absolute;
  top:36rpx;
  left:92%;
} 
.wrong{
  background-color: #FF3C3F;
  color:#fff;
  font-size: 14px;
  position: relative;
}
.wrong::before{
  content: "X";
  font-size: 22px;
  color:fff;
  display: block;
  width:15px;
  height: 15px;
  position: absolute;
  top:0;
  left:10px;
}
.wrong::after{
  content: "X";
  font-size: 84rpx;
  color:fff;
  display: block;
  width:15px;
  height:15px;
  position: absolute;
  border:0;
  top:24rpx;
  left:92%;
}
.quitBtn{
  background-color:transparent;
  border:2px solid #fff;
  border-radius: 50px;
  color:#fff;
  padding: 0 60rpx;
  float: left;
  margin-right: 80rpx;
  margin-bottom:10rpx;
  margin-top:20rpx;
}
.shareBtn{
  background-color:#F49816;
  /* border:2px solid #F49816; */
  color:#fff;
  border-radius: 50px;
  float: left;
  padding:6rpx 64rpx;
  margin-bottom:10rpx;
  margin-top:20rpx;

}